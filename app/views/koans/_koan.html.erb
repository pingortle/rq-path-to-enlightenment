<div data-controller="minitest" id="<%= dom_id koan %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Title:</strong>
    <%= koan.title %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Description:</strong>
    <%= koan.description %>
  </p>

  <div class="my-5">
    <strong class="block font-medium mb-1">Initial code:</strong>
    <pre>
      <code-input language="ruby" data-minitest-target="code"><%= koan.initial_code %></code-input>
    </pre>
    <button data-action="click->minitest#run" class="cursor-pointer mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium">Run</button>
    <pre>
      <code class="block" data-minitest-target="output"></code>
    </pre>
  </div>

  <p class="my-5">
    <strong class="block font-medium mb-1">Order:</strong>
    <%= koan.order %>
  </p>

</div>
